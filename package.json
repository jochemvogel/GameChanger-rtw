{
    "name": "server",
    "version": "1.0.0",
    "description": "server for browser technologies",
    "main": "app.js",
    "scripts": {
        "start": "node .",
        "dev": "nodemon & npm run watch",
        "prebuild": "rimraf ./public",
        "build": "npm-run-all build:*",
        "build:css": "node scripts/build-css.js",
        "build:js": "node scripts/build-js.js",
        "build:assets": "node scripts/build-assets.js",
        "build:img": "node scripts/build-img.js",
        "watch": "npm-run-all watch:*",
        "watch:css": "chokidar \"src/css/*.css\" --c \"npm run build:css\"",
        "watch:js": "chokidar \"src/js/*.js\" --c \"npm run build:js\"",
        "watch:assets": "chokidar \"src/**/*.*\" --c \"npm run build:assets\"",
        "watch:img": "chokidar \"src/img/*.*\" --c \"npm run build:img\""
    },
    "author": "Jochem Vogel",
    "license": "ISC",
    "dependencies": {
        "body-parser": "^1.19.0",
        "cookie-parser": "^1.4.5",
        "dotenv": "^8.2.0",
        "ejs": "^3.1.6",
        "express": "^4.17.1",
        "node-fetch": "^2.6.1",
        "socket.io-client": "^4.0.0",
        "uuid": "^8.3.2"
    },
    "devDependencies": {
        "chokidar-cli": "^2.1.0",
        "gulp": "^4.0.2",
        "gulp-autoprefixer": "^7.0.1",
        "gulp-clean-css": "^4.3.0",
        "gulp-concat": "^2.6.1",
        "gulp-terser": "^2.0.1",
        "nodemon": "^2.0.7",
        "npm-run-all": "^4.1.5",
        "rimraf": "^3.0.2"
    }
}

</div>

<hr />

<section id="chat">
    <% if (match) { %>
        <h3><%= match.team1 %> - <%= match.team2 %></h3>
    <% } %>

    <% if (!match) { %>
        <h3>Unknown match</h3>
    <% } %>

    <ol></ol>
    <p id="typing" hidden>Someone is typing...</p>

    <form id="chat-form" action="POST">
        <input type="text" name="message" id="message" />
        <button id="send-btn" class="btn" type="submit">Send</button>
    </form>
</section>

